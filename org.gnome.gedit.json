{
    "app-id": "org.gnome.gedit",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "gedit",
    "rename-icon": "org.gnome.gedit",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--talk-name=org.gtk.vfs.*",
        "--metadata=X-DConf=migrate-path=/org/gnome/gedit/"
    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala", "/share/gir-1.0",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglade_catalog=false",
                "-Ddemos=false"
            ],
            "cleanup": [ "/bin/*", "/lib/peas-demo" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/1.24/libpeas-1.24.1.tar.xz",
                    "sha256": "9c3acf7a567cbb4f8bf62b096e013f12c3911cc850c3fa9900cbd5aa4f6ec284"
                }
            ]
        },
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/4.4/gtksourceview-4.4.0.tar.xz",
                    "sha256": "9ddb914aef70a29a66acd93b4f762d5681202e44094d2d6370e51c9e389e689a"
                }
            ]
        },
        {
            "name": "gspell",
            "cleanup": [
              "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url" : "https://download.gnome.org/sources/gspell/1.8/gspell-1.8.3.tar.xz",
                    "sha256" : "5ae514dd0216be069176accf6d0049d6a01cfa6a50df4bc06be85f7080b62de8"
                }
            ]
        },
        {
            "name": "gedit",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gedit/3.34/gedit-3.34.1.tar.xz",
                    "sha256": "ebf9ef4e19831699d26bb93ce029edfed65416d7c11147835fc370d73428d5c6"
                }
            ]
        },
        {
            "name" : "gedit-plugins",
            "buildsystem": "meson",
            "config-opts": [
                "-Dplugin_zeitgeist=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gedit-plugins/3.34/gedit-plugins-3.34.1.tar.xz",
                    "sha256": "420b2ec8f4b316e1ab289d7444d4a4d489ba641989b1fdcf9d6b769a1d388d72"
                }
            ]
        }
    ]
}
